# ============================================
# Trafi - Docker Environment Variables
# ============================================
# Copy this file to .env.docker and customize for your environment.
# These variables are used by docker-compose.yml
#
# Usage: cp .env.docker.example .env.docker
# Then:  docker-compose --env-file .env.docker up
#
# WARNING: Never commit .env.docker with real passwords!
# ============================================

# ============================================
# PostgreSQL Configuration
# ============================================
# Database server settings for multi-tenant storage

# Database name (default: trafi)
POSTGRES_DB=trafi

# Database user (default: trafi)
POSTGRES_USER=trafi

# Database password - CHANGE THIS IN PRODUCTION!
POSTGRES_PASSWORD=trafi_dev_password

# Host port mapping (default: 5432)
# Change if port 5432 is already in use
POSTGRES_PORT=5432

# ============================================
# Redis Configuration
# ============================================
# Cache and BullMQ job queue server

# Host port mapping (default: 6379)
# Change if port 6379 is already in use
REDIS_PORT=6379

# ============================================
# API Configuration
# ============================================
# NestJS backend settings

# Host port mapping (default: 3001)
API_PORT=3001

# ============================================
# Dashboard Configuration
# ============================================
# Next.js admin dashboard settings

# Host port mapping (default: 3000)
DASHBOARD_PORT=3000
