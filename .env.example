# ==============================================
# Trafi Monorepo - Centralized Environment Variables
# ==============================================
# Copy this file to .env and fill in the values
# This is the SINGLE SOURCE OF TRUTH for all env vars

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/trafi?schema=public"

# API Configuration
NODE_ENV=development
PORT=3001
API_PREFIX=api

# Authentication (JWT) - REQUIRED
# Minimum 32 characters for security
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_REFRESH_SECRET=your-refresh-token-secret-minimum-32-chars
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Dashboard Configuration
NEXT_PUBLIC_API_URL=http://localhost:3001

# Observability (optional)
OTEL_SERVICE_NAME=trafi-api
OTEL_EXPORTER_ENABLED=false

# Redis (for BullMQ and caching - Story 1.5+)
# REDIS_URL=redis://localhost:6379
