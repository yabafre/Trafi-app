{
  "name": "trafi",
  "private": true,
  "pnpm": {
    "overrides": {
      "pathe": "1.1.2",
      "effect": "3.16.0",
      "zod": "^3.24.1"
    }
  },
  "scripts": {
    "dev": "dotenv -- turbo dev",
    "build": "dotenv -- turbo build",
    "lint": "dotenv -- turbo lint",
    "test": "dotenv -- turbo test",
    "test:cov": "dotenv -- turbo test:cov",
    "test:e2e": "pnpm --filter @trafi/e2e test:e2e",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "dotenv -- turbo typecheck",
    "db:generate": "dotenv -- pnpm --filter @trafi/api db:generate",
    "db:push": "dotenv -- pnpm --filter @trafi/api db:push",
    "db:migrate:dev": "dotenv -- pnpm --filter @trafi/api db:migrate:dev",
    "db:migrate:deploy": "dotenv -- pnpm --filter @trafi/api db:migrate:deploy",
    "db:studio": "dotenv -- pnpm --filter @trafi/api db:studio",
    "db:seed": "dotenv -- pnpm --filter @trafi/api db:seed",
    "docker:up": "docker compose up",
    "docker:up:build": "docker compose up --build",
    "docker:up:detach": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:down:volumes": "docker compose down -v",
    "docker:build": "docker compose build",
    "docker:logs": "docker compose logs -f",
    "docker:ps": "docker compose ps"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.4.2",
    "turbo": "^2.3.4",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20"
  }
}
